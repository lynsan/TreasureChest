<Page x:Class="Treasure.Chest.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Chest.png"/>

            </Grid.Background>
        </Grid>

        <!--Stackpanel for textboxes in Treasure Chest-->
        <StackPanel Grid.Row="1"/>

        <TextBox Text="{Binding Num1}" MinHeight="50" MinWidth="50" BorderBrush="Black" x:Name="Guess1"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Margin="30,63,185,112">
            
        </TextBox>

        <TextBox Text="{Binding Num2}" MaxLength="1" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess2"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Margin="85,63,130,112"/>

        <TextBox Text="{Binding Num3}" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess3"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Margin="141,63,75,112"/>

        <TextBox Text="{Binding Num4}" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess4"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Margin="196,63,21,112"/>

        <!--Box for showing previous attempts-->
        <StackPanel Grid.Column="2" Grid.RowSpan="10" Margin="10,50">
            <Border Width="250" 
             MinHeight="320" 
             CornerRadius="20" 
             Background="White"/>

        </StackPanel>

        <!--Stackpanel for textbox Number of tries-->
        <StackPanel Grid.Column="2">

            <Label Content="Antal försök:" FontSize="22" FontWeight="Bold" Foreground="White">
            </Label>
            
        </StackPanel>
        <Button 
                Content="Guess"
                Command="{Binding GuessCommand}" 
                Width="100"
                Height="40"
            />

    </Grid>
</Page>
