<Page x:Class="Treasure.Chest.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Text="{Binding Num1}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" Name="Guess1"
                     FontSize="30" BorderThickness="5" TextAlignment="Center"></TextBox>

            <TextBox Text="{Binding Num2}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" Name="Guess2"
                     FontSize="30" BorderThickness="5" TextAlignment="Center"></TextBox>

            <TextBox Text="{Binding Num3}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" Name="Guess3"
                     FontSize="30" BorderThickness="5" TextAlignment="Center"></TextBox>

            <TextBox Text="{Binding Num4}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" Name="Guess4"
                     FontSize="30" BorderThickness="5" TextAlignment="Center"></TextBox>

        </StackPanel>

    </Grid>
</Page>
