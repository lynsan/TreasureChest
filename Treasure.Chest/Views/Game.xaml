<Page x:Class="Treasure.Chest.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="1">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Chest.png"/>

            </Grid.Background>
        </Grid>

        <!--Stackpanel for textboxes in Treasure Chest-->
        <!--<StackPanel Grid.Row="1" --><!--Grid.Column="0"--><!--/>-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding Num1}" MaxLength="1" MinHeight="50" MinWidth="50" BorderBrush="Black" x:Name="Guess1" 
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Grid.Column="0">

            </TextBox>

            <TextBox Text="{Binding Num2}" MaxLength="1" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess2"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Grid.Column="1"/>

            <TextBox Text="{Binding Num3}" MaxLength="1" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess3"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Grid.Column="2"/>

            <TextBox Text="{Binding Num4}" MaxLength="1" MinWidth="50" MinHeight="50" BorderBrush="Black" x:Name="Guess4"
                     FontSize="30" BorderThickness="4" TextAlignment="Center" Grid.Row="1" Grid.Column="3"/>
            
           

        </Grid>
        
       
        <!--Box for showing previous attempts-->
        <StackPanel Grid.Column="2" Grid.RowSpan="10" Margin="10,50">
            <Border Width="250" 
             Height="350" 
             CornerRadius="0" 
             Background="White">
            
            </Border>

        </StackPanel>

        <!-- row definitions for number of tries-->
        <Grid Grid.Column="2" Grid.RowSpan="10" Margin="10,50">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="{Binding Position0_0}" FontSize="20"  MinHeight="30" MinWidth="50" Background="White" Foreground="Black" HorizontalAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="1" Content="{Binding Position0_1}" FontSize="20"  MinHeight="30" MinWidth="50" Background="White" Foreground="Black" HorizontalAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="2" Content="{Binding Position0_2}" FontSize="20"  MinHeight="30" MinWidth="50" Background="White" Foreground="Black" HorizontalAlignment="Center"/>
            <Label Grid.Row="0" Grid.Column="3" Content="{Binding Position0_3}" FontSize="20"  MinHeight="30" MinWidth="50" Background="White" Foreground="Black" HorizontalAlignment="Center"/>
 

        </Grid>

        <!--textbox Number of tries-->
        <StackPanel Grid.Column="2">

            <Label Content="Antal försök:" FontSize="22" FontWeight="Bold" Foreground="White">
            </Label>
        </StackPanel>
        <Button x:Name="btnGuess" Content="Gissa" HorizontalAlignment="Center" Command="{Binding GuessCommand}"
                VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" FontSize="20" FontWeight="Bold" Padding="10">
            <Button.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="1" Color="Black"></DropShadowEffect>
            </Button.Effect>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
