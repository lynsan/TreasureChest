<Page x:Class="Treasure.Chest.Views.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">


    <Grid>
        <Grid Margin="30,200,400,30">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Chest.png"/>

            </Grid.Background>

        </Grid>

        <!--Stackpanel for textboxes in Treasure Chest-->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="110,240,0,0" Width="225">

            <TextBox Text="{Binding Num1}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" x:Name="Guess1"
                     FontSize="30" BorderThickness="4" TextAlignment="Center"/>

            <TextBox Text="{Binding Num2}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" x:Name="Guess2"
                     FontSize="30" BorderThickness="4" TextAlignment="Center"/>

            <TextBox Text="{Binding Num3}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" x:Name="Guess3"
                     FontSize="30" BorderThickness="4" TextAlignment="Center"/>
            <TextBox Text="{Binding Num4}" MaxLength="1" Width="50" MinHeight="50" BorderBrush="Black" x:Name="Guess4"
                     FontSize="30" BorderThickness="4" TextAlignment="Center"/>

        </StackPanel>

        <!--Stackpanel for Number of tries Box-->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="500,0,0,30" Width="280">

            <Border Width="250" Height="320" CornerRadius="20" Background="White"/>

        </StackPanel>

        <!--Stackpanel for textbox Number of tries-->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="550,0,0,300" Width="200">

            <Label Content="Antal försök:" FontSize="22" FontWeight="Bold" Foreground="White">
            </Label>
            
        </StackPanel>
        <Button 
                Content="Guess"
                Command="{Binding GuessCommand}" 
                Width="100"
                Height="40"
            />

    </Grid>
</Page>
