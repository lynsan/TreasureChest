<Page x:Class="Treasure.Chest.Views.Rules"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Rules">

        <Grid Margin="-16,-127,-16,-141" >
        <Grid.Background >
            <ImageBrush ImageSource="/Assets/EmptyScroll.png"/>
        </Grid.Background>

        <StackPanel Margin="-14,103,-14,-70">
            <Label Content="How to play" FontSize="18" FontWeight="Black" Foreground="Black" HorizontalAlignment="Center" Margin="0,115,0,276" />
        </StackPanel>
        <TextBlock Text="{Binding GameRules}" FontSize="15" FontWeight="Bold" Foreground="Black" Margin="149,251,124,227"/>
        </Grid>
</Page>
