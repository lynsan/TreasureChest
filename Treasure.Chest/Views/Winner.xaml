<Page x:Class="Treasure.Chest.Views.Winner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Winner">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.ColumnSpan="3"  Grid.RowSpan="2" Margin="125,10,125,10">
            <Grid.Background >
                <ImageBrush ImageSource="/Assets/PaperRollWinner.png" />

            </Grid.Background>
        </Grid>

        <Label Content="Well done pirate!" FontSize="18" FontWeight="Black" Foreground="Black" Grid.Column="1" HorizontalAlignment="Center" Margin="15,130,15,25" ></Label>

        <Label Content="Name:" FontSize="18" FontWeight="Bold" Foreground="Black" Grid.Column="1" Grid.Row="1"></Label>

        <TextBox Text="{Binding MyName}" Grid.Row="1" Grid.Column="1" Foreground="Black" Margin="80,5,5,180" MinHeight="50" MinWidth="100"
                 FontSize="16" FontWeight="Bold" BorderThickness="4"></TextBox>

        <Label Content="Points:" FontSize="18" FontWeight="Bold" Foreground="Black" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,65,257, 67"/>

        <Label Target="{Binding Score}" FontSize="18" FontWeight="Bold" Background="White" Grid.Column="1" Grid.Row="1" Content=""
               Height="50" BorderThickness="4" Foreground="Black" Margin="80,50,5,112"/>


        <!--Förberett spara knapp, -->
        <Button  Command="{Binding SaveCommand}" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" FontSize="20" FontWeight="Bold" Padding="10" Margin="0,150,0,0">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10"  ShadowDepth="5" Color="Black"></DropShadowEffect>
            </Button.Effect>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>

            </Button.Resources>



        </Button>

    </Grid>
</Page>
