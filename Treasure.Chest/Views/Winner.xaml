<Page x:Class="Treasure.Chest.Views.Winner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Treasure.Chest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Winner">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.ColumnSpan="3"  Grid.RowSpan="2" Margin="125,10,125,10">
            <Grid.Background >
                <ImageBrush ImageSource="/Assets/PaperRollWinner.png" />

            </Grid.Background>
        </Grid>

        <Label Content="Grattis! Du klarade spelet" FontSize="20" Foreground="Black" Grid.Column="1" HorizontalAlignment="Center" Margin="15,130,15,25" ></Label>

        <Label Content="Namn:"  Foreground="Black" FontSize="18"  Grid.Column="1" Margin="10,0,180,180" Grid.Row="1" >
        </Label>

        <TextBox x:Name="TxtBoxWinner"  Foreground="Black" Background="White" BorderThickness="3" Grid.Column="1" Grid.Row="1" MinWidth=" 100" Margin="100,5,2,190" >
        </TextBox>


        <!--Förberett spara knapp, -->
        <Button x:Name="BtnSaveWin" Content="Spara" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" FontSize="20" FontWeight="Bold" Padding="10">
            <Button.Effect>
                <DropShadowEffect BlurRadius="10"  ShadowDepth="5" Color="Black"></DropShadowEffect>
            </Button.Effect>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>

            </Button.Resources>



        </Button>

    </Grid>
</Page>
